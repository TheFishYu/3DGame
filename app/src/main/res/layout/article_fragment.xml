<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/main_top_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_top_hsv_bg"
        android:fillViewport="true"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/main_top_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_top_rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="文章首页"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="热点新闻"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="游戏杂谈"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="硬件信息"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="游戏前瞻"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="游戏评测"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="原创精品"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="游戏盘点"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="时事焦点"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/main_top_rb10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:padding="5dp"
                android:text="攻略中心"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="16sp" />
        </RadioGroup>

    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_center_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_top_hsv"
        android:layout_above="@id/main_bottom_rg"
        />

</LinearLayout>